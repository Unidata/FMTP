CC = clang++
INCLUDE = ../
LIB =
ELFFILE = vcmtpSendv3
DEBUG_FLAG = DEBUG

$(ELFFILE): test.cpp UdpSend.cpp TcpSend.cpp senderMetadata.cpp vcmtpSendv3.cpp
